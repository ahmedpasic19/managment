{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",

  "compilerOptions": {
    "lib": ["ES6"],
    "module": "commonjs",
    "target": "ES5",
    "rootDir": "./src",
    "outDir": "./build",

    "typeRoots": ["./node_modules/@types", "./@types"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
